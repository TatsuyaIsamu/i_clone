<!DOCTYPE html>
<html>
  <head>
    <title>IClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <%= link_to_unless_current "instagram_clone", "/" %>
       
        <% if logged_in?%>
          <%= link_to "ユーザーページ", users_path %>
          <%= link_to "投稿一覧", pictures_path %>
          <%= link_to "ユーザー情報", user_path(current_user.id) %>
          <%= link_to "お問い合わせ", new_contact_path %>
          <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
        <% else %>
          <%= link_to "新規作成", new_user_path %>
          <%= link_to "ログイン", new_session_path %>
        <% end%>
    </header>
    <%= yield %>
  </body>
</html>
